<?xml version="1.0"?>
<odoo>

  <record id="view_tree_checkout" model="ir.ui.view">
    <field name="name">Checkout Tree</field>
    <field name="model">library.checkout</field>
    <field name="arch" type="xml">
        <tree>
            <field name="request_date" />
            <field name="member_id" />
        </tree>
    </field>
  </record>

  <record id="view_form_checkout" model="ir.ui.view">
    <field name="name">Checkout Form</field>
    <field name="model">library.checkout</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_open" type="object" string="Open" states="new" class="btn btn-info" />
          <button name="action_done" type="object" string="Done" states="open" class="btn btn-success" />
          <field name="state" widget="statusbar" statusbar_visible="new,open,done"/>
        </header>
        <sheet>
          <group>
            <field name="member_id" />
            <field name="request_date" />
            <field name="user_id" />
            <field name="line_ids" widget="many2many_tags"/>
          </group>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="activity_ids" widget="mail_activity"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

</odoo>